
defaults
  mode http
  timeout client 15s
  timeout connect 10s
  timeout server 15s
  timeout http-request 10s

frontend mossad-tech-frontend
    bind *:443
    default_backend mossad-tech-backend

backend mossad-tech-backend
    balance roundrobin
    server 52393-web-01 100.26.231.12:443 check
    server 52393-web-02 54.197.101.47:443 check

frontend web-front
        bind *:443
        mode http
        default_backend web-backend

backend web-backend
        balance roundrobin
        server 52393-web-01 100.26.231.12:443 check
        server 52393-web-02 54.197.101.47:443 check

frontend www-http
   bind :80
   reqadd X-Forwarded-Proto:\ http
   default_backend www-backend

frontend www-https
   bind :443 ssl crt /etc/haproxy/certs/www.ianculp.tech.pem
   reqadd X-Forwarded-Proto:\ https
   acl letsencrypt-acl path_beg /.well-known/acme-challenge/
   use_backend letsencrypt-backend if letsencrypt-acl
   default_backend www-backend

backend www-backend
   redirect scheme https if !{ ssl_fc }
   server 1613-web-01 34.73.244.83:80 check
   server 1613-web-02 35.175.186.218:80 check

backend letsencrypt-backend
   server letsencrypt 127.0.0.1:54321

